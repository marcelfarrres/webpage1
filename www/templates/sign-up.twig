{% extends 'base.twig' %}

{% block title %}
    SIGN-UP
{% endblock %}

{% block content %}
<div class="main_container">
    <form class="secondary_container" data-cy="sign-up" action="{{ formAction }}" method="{{ formMethod }}" accept-charset="utf-8">
        <label class="label" for="email">Email:</label>
        <input class="input" data-cy="sign-up__email" type="text" id="email" name="email" value="{% if formData.email %}{{ formData.email }}{% endif %}">
        {% if formErrors.email %}
            <span class="sign-up__wrongEmail" data-cy="sign-up__wrongEmail" style="color: red;">{{ formErrors.email }}</span>
        {% endif %}
        
        <label class="label" for="password">Password:</label>
        <input class="input" data-cy="sign-up__password" type="password" id="password" name="password">
        {% if formErrors.password %}
            <span class="sign-up__wrongPassword" data-cy="sign-up__wrongPassword" style="color: red;">{{ formErrors.password }}</span>
        {% endif %}

        <label class="label" for="Repeat-password">Password:</label>
        <input class="input" data-cy="sign-up__repeatPassword" type="password" id="repeatPassword" name="repeatPassword">
        {% if formErrors.repeatPassword %}
            <span style="color: red;">{{ formErrors.repeatPassword }}</span>
        {% endif %}

        {% if exception %}
            <span style="color: red;">{{ exception }}</span>
        {% endif %}

        <input class="button" data-cy="sign-up__btn" type="submit" value="SIGN UP">
    </form>
</div>
    
{% endblock %}
